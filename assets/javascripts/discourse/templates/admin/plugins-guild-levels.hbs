<div class="customize guild-levels">
	<div class="admin-container">
		<div class='content-list span6'>
			<h3>{{i18n 'admin.guild.titles.levels'}}</h3>
			<ul>
			{{#each model as |level|}}
				<li><a {{action "selectDGLevel" level}} class="{{if level.selected 'active'}}">{{level.name}}</a></li>
			{{/each}}
			</ul>
			{{#unless model}}
				<p class="desc">Add some levels for your users.</p>
			{{/unless}}
			{{d-button class="btn"
		             action="newDGLevel"
		             label="admin.customize.new"
		             icon="plus"}}
		</div>
		{{#if selectedItem.name}}
		<div class="current-style color-scheme badges">
			<div class='admin-container'>
			    <h1>{{text-field class="style-name" value=selectedItem.name}}</h1>
			    <div class="controls">
					<button {{action "save"}} disabled={{selectedItem.disableSave}} class='btn'>{{i18n 'admin.customize.save'}}</button>
					<button {{action "toggleEnabled"}} disabled={{selectedItem.disableEnable}} class="btn">
						{{#if selectedItem.enabled}}
							{{i18n 'disable'}}
						{{else}}
							{{i18n 'enable'}}
						{{/if}}
					</button>
					<button {{action "copy" selectedItem}} class='btn'><i class="fa fa-copy"></i> {{i18n 'admin.customize.copy'}}</button>
					<button {{action "destroy"}} class='btn btn-danger'><i class="fa fa-trash-o"></i> {{i18n 'admin.customize.delete'}}</button>
					<span class="saving {{unless selectedItem.savingStatus 'hidden'}}">{{selectedItem.savingStatus}}</span>
				</div>
		    </div>
		    <br>
		    <form class="form-horizontal">
		    <div>
			    <label>{{i18n 'admin.guild.levels.id'}}: {{ selectedItem.id }}</label>
		    </div>
		    <div>
		    {{combo-box content=customGroups valueAttribute="id" value=selectedItem.group none="admin.groups.bulk_select"}}
		    </div>
			<div>
			    <label for="initial-payment">{{i18n 'admin.guild.levels.initial_payment'}}</label>
			    <span>$</span>{{input type="text" name="initial-payment" value=selectedItem.initial_payment}}
			    <p class="help">{{i18n 'admin.guild.levels.initial_payment_description'}}</p>
		    </div>
			<div>
			    <label>
			    	{{input type="checkbox" name="recurring" checked=selectedItem.recurring}}
				    {{i18n 'admin.guild.levels.recurring'}}
			    </label>
			    <p class="help">{{i18n 'admin.guild.levels.recurring_description'}}</p>
		    </div>
		    {{#if selectedItem.recurring}}
			<div>
			    <label for="recurring-payment">{{i18n 'admin.guild.levels.recurring_payment'}}</label>
			    {{input type="text" name="recurring-payment" value=selectedItem.recurring_payment}}
			    <p class="help">{{i18n 'admin.guild.levels.recurring_payment_description'}}</p>
		    </div>
			<div>
			    <label>
			    	{{input type="checkbox" name="trial" checked=selectedItem.trial}}
				    {{i18n 'admin.guild.levels.trial'}}
			    </label>
			    <p class="help">{{i18n 'admin.guild.levels.trial_description'}}</p>
		    </div>
		    {{#if selectedItem.trial}}
			<div>
			    <label for="trial-period">{{i18n 'admin.guild.levels.trial_period'}}</label>
			    {{input type="text" name="trial-period" value=selectedItem.trial_period}}
			    <p class="help">{{i18n 'admin.guild.levels.trial_period_description'}}</p>
		    </div>
		    {{/if}}
		    {{/if}}
		    </form>
		</div>
		{{else}}
			<div class="current-style color-scheme badges">No level selected.</div>
		{{/if}}
	</div>
</div>